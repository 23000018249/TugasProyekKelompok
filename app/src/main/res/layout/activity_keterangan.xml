<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KeteranganActivity">

    <TextView
        android:id="@+id/tv_foto_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_preview_gambar"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/tv_foto_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_keterangan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keterangan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/iv_preview_gambar"
        app:layout_constraintTop_toBottomOf="@+id/iv_preview_gambar" />

    <EditText
        android:id="@+id/et_keterangan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Lokasi ditemukan"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_keterangan_title"
        app:layout_constraintStart_toStartOf="@+id/tv_keterangan_title"
        app:layout_constraintEnd_toEndOf="@+id/iv_preview_gambar" />

    <ImageButton
        android:id="@+id/btn_upload"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@android:drawable/ic_menu_upload"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/et_keterangan"
        app:layout_constraintStart_toStartOf="@+id/et_keterangan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload"
        app:layout_constraintStart_toStartOf="@+id/btn_upload"
        app:layout_constraintEnd_toEndOf="@+id/btn_upload"/>

</androidx.constraintlayout.widget.ConstraintLayout>